# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /cities                                controllers.CityController.index
GET     /cities/:cityId                        controllers.CityController.get(cityId: String)
POST    /cities                                controllers.CityController.create()

GET     /hotels                                controllers.HotelController.index
GET     /hotels/cities/:fromCity               controllers.HotelController.filter(fromCity)
POST    /hotels                                controllers.HotelController.create()